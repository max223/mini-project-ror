<h1>Articles</h1>
<% @posts.each do |article| %>
    <h3><%= article.name %></h3>
    <!--<p><%= article.content %></p>-->
    <p>
      <a href="<%= post_path(article.id) %>" class="btn btn-primary">Lire la suite</a>
      <a href="<%= edit_post_path(article.id) %>" class="btn btn-primary">Editer l'article</a>
      <a href="<%= post_path(article.id) %>" class="btn btn-danger" data-confirm="Are you sure ? " data-method="DELETE">Supprimer l'article</a>
    </p>
<% end %>

